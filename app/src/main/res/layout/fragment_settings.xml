<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">


    <TextView
        android:id="@+id/detail_file_name"
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/settings_text"
        android:textAlignment="center"
        android:textSize="20sp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />

    <ImageView
        android:id="@+id/settings_bg"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        android:alpha=".5"
        android:contentDescription="@string/images_bg_descr"
        app:layout_constraintBottom_toTopOf="@+id/detail_file_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_settings_black" />

    <ImageButton
        android:id="@+id/saveSettingsBtn"
        android:background="@drawable/bottom_action_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_save_black" />

</androidx.constraintlayout.widget.ConstraintLayout>